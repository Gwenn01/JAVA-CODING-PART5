public class Main {
	public static void main(String[] args) {
		int n = 123;
		System.out.println(numberSteps(n));
	}
	static int numberSteps(int n){
	    int count = 0;
	    while(n != 0){
	        if(n % 2 == 0){
	            n /= 2;
	        }else{
	            n -= 1;
	        }
	        count++;
	    }
	    
	    return count;
	}
}